<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="40px">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtHidTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:visibility="invisible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="30sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtItemPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2FAE36"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lblCustomerDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_custom"
                        android:padding="20px"
                        android:text="@string/payment_customerDetail"
                        android:textColor="#009688"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edittxtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:background="@drawable/et_custom"
                        android:editable="false"
                        android:ems="10"
                        android:hint="@string/payment_firstName"
                        android:inputType="none"
                        android:padding="20px"
                        android:shadowDx="5"

                        android:shadowDy="5"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edittxtLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:background="@drawable/et_custom"
                        android:editable="false"

                        android:ems="10"
                        android:hint="@string/payment_lastName"
                        android:inputType="none"
                        android:padding="20px"
                        android:shadowDx="5"

                        android:shadowDy="5"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edittxtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:background="@drawable/et_custom"
                        android:editable="false"

                        android:ems="10"
                        android:hint="@string/payment_phone"
                        android:inputType="none"
                        android:padding="20px"
                        android:shadowDx="5"

                        android:shadowDy="5"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edittxtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:background="@drawable/et_custom"
                        android:ems="10"

                        android:hint="@string/payment_address"
                        android:inputType="textMultiLine"
                        android:padding="20px"
                        android:shadowDx="5"
                        android:shadowDy="5"

                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:background="#43D1C0C0"
                    android:gravity="center">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/rGroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rbCredit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="25px"
                                    android:layout_marginTop="20px"
                                    android:layout_marginBottom="20px"
                                    android:autofillHints="cxz"
                                    android:background="@drawable/et_custom"
                                    android:backgroundTint="#FFFFFF"

                                    android:minHeight="48dp"
                                    android:onClick="onRadioBtnClick"
                                    android:padding="20px"
                                    android:shadowDx="5"
                                    android:shadowDy="5"
                                    android:shadowRadius="10"
                                    android:text="@string/payment_credit"

                                    android:textColor="#000000"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/rbDebit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="25px"
                                    android:layout_marginTop="20px"
                                    android:layout_marginBottom="20px"
                                    android:autofillHints="cxz"
                                    android:background="@drawable/et_custom"
                                    android:backgroundTint="#FFFFFF"
                                    android:minHeight="48dp"
                                    android:onClick="onRadioBtnClick"

                                    android:padding="20px"
                                    android:shadowDx="5"
                                    android:shadowDy="5"
                                    android:shadowRadius="10"
                                    android:text="@string/payment_debit"

                                    android:textColor="#000000"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/rbCash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="25px"
                                    android:layout_marginTop="20px"
                                    android:layout_marginBottom="20px"
                                    android:autofillHints="cxz"
                                    android:background="@drawable/et_custom"

                                    android:backgroundTint="#FFFFFF"
                                    android:minHeight="48dp"
                                    android:onClick="onRadioBtnClick"
                                    android:padding="20px"
                                    android:shadowDx="5"
                                    android:shadowDy="5"
                                    android:shadowRadius="10"
                                    android:text="@string/payment_cash"

                                    android:textColor="#000000"
                                    android:textSize="20sp" />

                            </RadioGroup>

                        </TableRow>

                    </TableLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TableRow
                        android:id="@+id/trCardDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="invisible">

                        <TableLayout
                            android:id="@+id/tblCardDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="20px">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20px"
                                android:layout_marginBottom="20px">

                                <TextView
                                    android:id="@+id/lblCardDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20px"
                                    android:layout_marginBottom="20px"
                                    android:background="@drawable/et_custom"

                                    android:padding="20px"
                                    android:shadowDx="5"
                                    android:shadowDy="5"

                                    android:text="@string/payment_cardDetail"
                                    android:textColor="#009688"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20px"
                                android:layout_marginBottom="20px">

                                <EditText
                                    android:id="@+id/edittxtCardNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20px"
                                    android:layout_marginBottom="20px"
                                    android:background="@drawable/et_custom"
                                    android:ems="10"

                                    android:hint="@string/payment_cardNumber"
                                    android:inputType="none|number"
                                    android:padding="20px"
                                    android:shadowDx="5"
                                    android:shadowDy="5"

                                    android:textColor="#000000"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20px"
                                android:layout_marginBottom="20px">

                                <EditText
                                    android:id="@+id/edittxtCVV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20px"
                                    android:layout_marginBottom="20px"
                                    android:background="@drawable/et_custom"
                                    android:ems="10"

                                    android:hint="@string/payment_cvv"
                                    android:inputType="none|number"
                                    android:padding="20px"
                                    android:shadowDx="5"
                                    android:shadowDy="5"

                                    android:textColor="#000000"
                                    android:textSize="20sp" />
                            </TableRow>

                        </TableLayout>
                    </TableRow>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:gravity="center">

                    <Button
                        android:id="@+id/vtnPay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_custom"
                        android:onClick="onPayClick"

                        android:text="@string/payment_pay"
                        android:textSize="24sp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>