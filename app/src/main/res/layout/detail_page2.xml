<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowSpan="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:shrinkColumns="0"
                android:stretchColumns="0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30px"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:elevation="10dp"
                        app:srcCompat="@drawable/img_noimage" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_span="3"
                        android:background="#009688" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="30px"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtTitle_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/txtPrice_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="50px"
                        android:layout_span="1"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="#009688"
                        android:textSize="34sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_span="3"
                        android:background="#009688" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30px">

                    <TextView
                        android:id="@+id/txtDesc_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60px"
                        android:layout_span="3"
                        android:text="Descriptioin"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_span="3"
                        android:background="#009688" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30px"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnMinus_detail"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:background="@drawable/et_custom"
                            app:srcCompat="@drawable/img_minus" />

                        <TextView
                            android:id="@+id/txtCount_detail"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:background="@drawable/et_custom"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="34sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnPlus_detail"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:background="@drawable/et_custom"
                            app:srcCompat="@drawable/img_plus" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30px"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnCheckOut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30px"
                        android:layout_span="3"
                        android:background="@drawable/btn_custom"
                        android:padding="10px"
                        android:text="@string/detail_checkout"
                        android:textSize="24sp"
                        android:textStyle="normal" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>